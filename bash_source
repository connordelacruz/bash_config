# ==============================================================================
# Sources bash configuration files stored in sources/ subdirectory
# ==============================================================================


# If not running interactively, don't do anything
case $- in
    *i*) ;;
    *) return;;
esac

# Path to ~/.bash_config/sources
SRC_PATH="$HOME/.bash_config/sources"

# ------------------------------------------------------------------------------
# CONFIG FILES
# ------------------------------------------------------------------------------

# Environment variable definitions
if [ -f "$SRC_PATH/variables" ]; then
    . "$SRC_PATH/variables"
fi

# Bash configuration (PS1, color settings, etc)
if [ -f "$SRC_PATH/config" ]; then
    . "$SRC_PATH/config"
fi

# Alias definitions
if [ -f "$SRC_PATH/aliases" ]; then
    . "$SRC_PATH/aliases"
fi

# Function definitions
if [ -f "$SRC_PATH/functions" ]; then
    . "$SRC_PATH/functions"
fi

# include sources specific to this machine 
if [ -f "$SRC_PATH/local/local_source" ]; then
    . "$SRC_PATH/local/local_source"
fi

